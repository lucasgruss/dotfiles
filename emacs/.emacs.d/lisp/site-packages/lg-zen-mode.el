;;; lg-zen-mode --- A nice zen mode for emacs -*- lexical-binding: t; -*-
;; Author: Lucas Gruss

(require 'hide-mode-line)
(require 'tab-line)
(require 'tab-bar)

(define-minor-mode lg/zen-mode
  "Toggle off or on the modeline, tab-line and tab-bar all
together."
  :lighter nil
  (if lg/zen-mode
      (progn
	(hide-mode-line-mode +1)
	(tab-line-mode -1)
	;; toggle tab-bar off
	(set-frame-parameter nil 'tab-bar-lines 0))
    (hide-mode-line-mode -1)
    (tab-line-mode +1)
    (set-frame-parameter nil 'tab-bar-lines 1)))

(provide 'lg-zen-mode)
